<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etAnnotText"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_weight="50"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/TextBtnValiderRecord"
            android:id="@+id/btnValiderTexte"
            android:background="@color/btnValiderRecord"/>
        <Button
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/TextBtnAnnulerRecord"
            android:id="@+id/btnAnnulerTexte"
            android:background="@color/btnAnnulerRecord"/>
    </LinearLayout>


</LinearLayout>