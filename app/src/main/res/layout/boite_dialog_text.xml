<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etAnnotText"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:text="DurÃ©e :" />

        <EditText
            android:id="@+id/etDurationAnnot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:ems="3"
            android:text="1"
            android:inputType="number"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="60"
            android:text="s" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_weight="50"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/BtnValider"
            android:id="@+id/btnValiderTextAnnot"
            android:background="@color/btnValider"/>
        <Button
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/TextBtnAnnulerRecord"
            android:id="@+id/btnAnnulerTextAnnot"
            android:background="@color/btnAnnuler"/>
    </LinearLayout>


</LinearLayout>